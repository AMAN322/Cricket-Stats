<% layout('layouts/boilerplate')%>
    <div class="jumbotron jumbotron-fluid">

        <h1 class="display-4 mb-3"> Welcome to the stats page</h1>
    </div>


    <% for (let p of player){%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=p.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= p.name %>
                        </h5>
                        <p class="card-text">
                            <%= p.role %>
                        </p>
                        <a class="btn btn-primary" href="/players/<%=p._id%>">View <%=p.name%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>